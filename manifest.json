{
    "manifest_version": 2,
    "name": "Theme Maker",
    "version": "1.0",
    "description": "Adds a red border to all webpages matching mozilla.org.",

    "permissions": ["theme"],

    "icons": {
      "48": "icons/canyon.png"
    },
    
    "browser_action": {
      "default_title": "Custom Theme",
      "default_popup": "mainpop.html"
    }
  } 